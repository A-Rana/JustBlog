@model IList<JustBlog.Core.Objects.Tag>

<div class="sidebar-widget widget_tag_cloud">
	<h3 class="sidebar-header">Popular Tags</h3>
	
	  @if (Model.Count > 0)
	  {
	  	<ul>
		    @foreach (var tag in Model)
		    {
		      <li>@Html.TagLink(tag)</li>
		    }
	    </ul>
	  }
	  else
	  {
	    <p>No tags found!</p>
	  }
</div>